<div id="modal">
  <div class="nav-arrows">
    <button id="prev">❮</button>
    <button id="next">❯</button>
  </div>
  <img src="" alt="Produto">
  <div class="modal-info">
    <div class="modal-title"></div>
    <a class="btn btn-whats" href="#" target="_blank"></a>
  </div>
</div>

<script>
const PHONE_NUMBER='5588999695989';
const PREFILLED_MESSAGE=encodeURIComponent('Olá! Vi seu catálogo e quero mais informações sobre: ');

// Lista de 20 produtos reais divididos em 4 categorias
const products=[
  // Interclasse
  {title:'Interclasse 001', img:'https://i.imgur.com/rirCBID.jpg', category:'interclasse'},
  {title:'Interclasse 002', img:'https://i.imgur.com/nXtFU87.jpg', category:'interclasse'},
  {title:'Interclasse 003', img:'https://i.imgur.com/iWvHMe6.jpg', category:'interclasse'},
  {title:'Interclasse 004', img:'https://i.imgur.com/rGJRArX.jpg', category:'interclasse'},
  {title:'Interclasse 005', img:'https://i.imgur.com/rirCBID.jpg', category:'interclasse'},

  // Clubes Brasileiros
  {title:'Brasileiros 001', img:'https://i.imgur.com/nXtFU87.jpg', category:'brasileiros'},
  {title:'Brasileiros 002', img:'https://i.imgur.com/iWvHMe6.jpg', category:'brasileiros'},
  {title:'Brasileiros 003', img:'https://i.imgur.com/rGJRArX.jpg', category:'brasileiros'},
  {title:'Brasileiros 004', img:'https://i.imgur.com/rirCBID.jpg', category:'brasileiros'},
  {title:'Brasileiros 005', img:'https://i.imgur.com/nXtFU87.jpg', category:'brasileiros'},

  // Clubes Internacionais
  {title:'Internacionais 001', img:'https://i.imgur.com/iWvHMe6.jpg', category:'internacionais'},
  {title:'Internacionais 002', img:'https://i.imgur.com/rGJRArX.jpg', category:'internacionais'},
  {title:'Internacionais 003', img:'https://i.imgur.com/rirCBID.jpg', category:'internacionais'},
  {title:'Internacionais 004', img:'https://i.imgur.com/nXtFU87.jpg', category:'internacionais'},
  {title:'Internacionais 005', img:'https://i.imgur.com/iWvHMe6.jpg', category:'internacionais'},

  // Seleções
  {title:'Seleção 001', img:'https://i.imgur.com/rGJRArX.jpg', category:'selecoes'},
  {title:'Seleção 002', img:'https://i.imgur.com/rirCBID.jpg', category:'selecoes'},
  {title:'Seleção 003', img:'https://i.imgur.com/nXtFU87.jpg', category:'selecoes'},
  {title:'Seleção 004', img:'https://i.imgur.com/iWvHMe6.jpg', category:'selecoes'},
  {title:'Seleção 005', img:'https://i.imgur.com/rGJRArX.jpg', category:'selecoes'}
];

function whatsUrl(title){
  return `https://wa.me/${PHONE_NUMBER}?text=${PREFILLED_MESSAGE + encodeURIComponent(title)}`;
}

const container=document.getElementById('catalogue');

function renderProducts(category){
  container.innerHTML='';
  const filtered = products.filter(p => p.category===category);
  filtered.forEach((p,i)=>{
    const card=document.createElement('article');
    card.className='card';

    const thumb=document.createElement('div'); thumb.className='thumb';
    const img=document.createElement('img'); img.src=p.img; img.alt=p.title;
    img.addEventListener('click',()=>openModal(i,filtered));
    thumb.appendChild(img);

    const info=document.createElement('div'); info.className='info';
    info.innerHTML=`<div class="product-title">${p.title}</div>`;

    const btns=document.createElement('div'); btns.className='btns';
    const btn=document.createElement('a'); btn.className='btn btn-whats'; btn.href=whatsUrl(p.title); btn.target='_blank'; btn.rel='noopener';
    btn.innerHTML=`<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="20" height="20" fill="white"><path d="M16 .5C7.44.5.5 7.44.5 16c0 2.76.72 5.43 2.1 7.78L.5 31.5l7.93-2.09A15.4 15.4 0 0 0 16 31.5c8.56 0 15.5-6.94 15.5-15.5S24.56.5 16 .5zm0 28c-2.4 0-4.74-.63-6.8-1.83l-.49-.29-4.7 1.24 1.25-4.59-.32-.47a12.96 12.96 0 0 1-2-7.06c0-7.18 5.83-13 13-13s13 5.82 13 13c0 7.18-5.83 13-13 13zm7.16-9.76c-.39-.2-2.3-1.14-2.65-1.27-.36-.13-.62-.2-.88.2s-1.01 1.27-1.24 1.53c-.23.26-.46.29-.85.1-.39-.2-1.65-.61-3.15-1.95-1.16-1.03-1.94-2.3-2.17-2.69-.23-.39-.02-.6.17-.79.17-.17.39-.46.59-.69.2-.23.26-.39.39-.65.13-.26.07-.49-.03-.69-.1-.2-.88-2.14-1.21-2.94-.32-.78-.65-.68-.88-.69h-.75c-.26 0-.69.1-1.06.49-.36.39-1.39 1.36-1.39 3.32s1.42 3.85 1.62 4.12c.2.26 2.8 4.28 6.78 6 3.97 1.71 3.97 1.14 4.7 1.07.72-.07 2.3-.93 2.62-1.83.33-.91.33-1.69.23-1.83-.09-.13-.36-.23-.75-.42z"/></svg> Falar no WhatsApp`;
    btns.appendChild(btn);

    card.appendChild(thumb);
    card.appendChild(info);
    card.appendChild(btns);
    container.appendChild(card);
  });
}

// Abas
const tabs=document.querySelectorAll('.tab');
let currentProducts=[];
tabs.forEach(tab=>{
  tab.addEventListener('click',()=>{
    tabs.forEach(t=>t.classList.remove('active'));
    tab.classList.add('active');
    renderProducts(tab.dataset.category);
  });
});

// Modal
const modal=document.getElementById('modal');
const modalImg=modal.querySelector('img');
const modalTitle=modal.querySelector('.modal-title');
const modalBtn=modal.querySelector('.modal-info .btn-whats');
let currentIndex=0;
let modalArray=[];

function openModal(i,array){
  modalArray=array;
  currentIndex=i;
  updateModal();
  modal.style.display='flex';
}

function updateModal(){
  const product=modalArray[currentIndex];
  modalImg.src=product.img;
  modalTitle.textContent=product.title;
  modalBtn.href=whatsUrl(product.title);
  modalBtn.innerHTML=`<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="20" height="20" fill="white"><path d="M16 .5C7.44.5.5 7.44.5 16c0 2.76.72 5.43 2.1 7.78L.5 31.5l7.93-2.09A15.4 15.4 0 0 0 16 31.5c8.56 0 15.5-6.94 15.5-15.5S24.56.5 16 .5zm0 28c-2.4 0-4.74-.63-6.8-1.83l-.49-.29-4.7 1.24 1.25-4.59-.32-.47a12.96 12.96 0 0 1-2-7.06c0-7.18 5.83-13 13-13s13 5.82 13 13c0 7.18-5.83 13-13 13zm7.16-9.76c-.39-.2-2.3-1.14-2.65-1.27-.36-.13-.62-.2-.88.2s-1.01 1.27-1.24 1.53c-.23.26-.46.29-.85.1-.39-.2-1.65-.61-3.15-1.95-1.16-1.03-1.94-2.3-2.17-2.69-.23-.39-.02-.6.17-.79.17-.17.39-.46.59-.69.2-.23.26-.39.39-.65.13-.26.07-.49-.03-.69-.1-.2-.88-2.14-1.21-2.94-.32-.78-.65-.68-.88-.69h-.75c-.26 0-.69.1-1.06.49-.36.39-1.39 1.36-1.39 3.32s1.42 3.85 1.62 4.12c.2.26 2.8 4.28 6.78 6 3.97 1.71 3.97 1.14 4.7 1.07.72-.07 2.3-.93 2.62-1.83.33-.91.33-1.69.23-1.83-.09-.13-.36-.23-.75-.42z"/></svg> Falar no WhatsApp`;
}

// Navegação modal
document.getElementById('prev').addEventListener('click',e=>{
  e.stopPropagation();
  currentIndex=(currentIndex-1+modalArray.length)%modalArray.length;
  updateModal();
});
document.getElementById('next').addEventListener('click',e=>{
  e.stopPropagation();
  currentIndex=(currentIndex+1)%modalArray.length;
  updateModal();
});

// Fechar modal clicando fora da imagem
modal.addEventListener('click',e=>{
  if(e.target===modal) modal.style.display='none';
});

// Render inicial
renderProducts('interclasse');
</script>
</body>
</html>
